<%= render 'dashboard_navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h1 class="latoblack">Players</h1>
      <% if @players.blank? %>
        <h3 class="latobold">Currently no players created.</h3>
      <% end %>
      <% for player in @players %>
        
      <% end %>
    </div>
    <div class="col-md-5">
      <h3 class="latolight">Add New Player</h3>
      <%= form_for Player.new do |f| %>
        <div class="form-group">
          <label class="sr-only">Name</label>
          <%= f.text_field :name, class: 'form-control', placeholder: 'First and Last Name' %>
        </div>
        <div class="form-group">
          <label class="sr-only">Number</label>
          <%= f.text_field :number, class: 'form-control', placeholder: 'Number' %>
        </div>

        
        <%= f.submit "Create Player", class: 'btn btn-default', name: 'publish' %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'dashboard_navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h1 class="latoblack">Announcements</h1>
      <% if @posts.blank? %>
        <h3 class="latobold">Currently no announcements created.</h3>
      <% else %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Event</th>
          <th>Event Date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for post in @posts %>
        <tr>
          <td>
            <p class="latolight"><%= post.title %></p>
          </td>
          <td>
            <p class="latolight"><%= post.status %></p>
          </td>
          <td>
            <p class="latolight"><%= link_to "Edit post", edit_post_path(post) %></p>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <% end %>
    </div>
    <div class="col-md-5">
      <h3 class="latolight">Add New Post</h3>
      <%= form_for Post.new do |f| %>
        <div class="form-group">
          <label class="sr-only">Title</label>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
        </div>
        <div class="form-group" id="date_picker">
          <label class="sr-only">Date</label>
          <%= f.text_field :date, class: 'form-control', placeholder: 'Pub Date' %>
        </div>
        <div class="form-group">
          <label class="sr-only">Body</label>
          <%= f.text_area :body, class: 'form-control redactor' %>
        </div>
        <%= f.submit "Publish Post", class: 'btn btn-default', name: 'publish' %>
      <% end %>
    </div>
  </div>
</div>

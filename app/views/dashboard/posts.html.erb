<%= render 'dashboard_navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h1 class="latoblack">Announcements</h1>
      <% if @posts.blank? %>
        <h3 class="latobold">Currently no announcements created.</h3>
      <% else %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Title</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for post in @posts %>
        <tr>
          <td>
            <p class="latobold"><%= post.title %></p>
          </td>
          <td>
            <p class="latolight"><%= post.status %></p>
          </td>
          <td>
            <p class="latolight text-right"><a href="" id="edit-post-btn" data-toggle="modal" data-target="#editModal-<%= post.id %>">Edit</a> |
            <%= link_to "Delete", post, method: :delete %>
          </td>
        </tr>

<!-- Modal -->
<div class="modal fade" id="editModal-<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!--<div class="modal-header">
        
        <h4 class="modal-title" id="myModalLabel"><%= post.title %></h4>
      </div>-->
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="latoregular"><%= post.title %></h3>
        <%= form_for post do |f| %>
          <div class="form-group">
            <label class="sr-only">Title</label>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
          </div>
          <div class="form-group" id="date_picker">
            <label class="sr-only">Date</label>
            <%= f.text_field :date, class: 'form-control', placeholder: 'Pub Date' %>
          </div>
          <div class="form-group">
            <label class="sr-only">Body</label>
            <%= f.text_area :body, class: 'form-control redactor' %>
          </div>
          <%= f.submit "Update Post", class: 'btn btn-blue', name: 'update' %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <% end %>
      </div>
      <!--<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>-->
    </div>
  </div>
</div>
<!-- End MODAL -->


        <% end %>
      </tbody>
    </table>

      <% end %>
    </div>
    <div class="col-md-5">
      <h3 class="latolight">Add New Post</h3>
      <%= form_for Post.new do |f| %>
        <div class="form-group">
          <label class="sr-only">Title</label>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
        </div>
        <div class="form-group" id="date_picker">
          <label class="sr-only">Date</label>
          <%= f.text_field :date, class: 'form-control', placeholder: 'Pub Date' %>
        </div>
        <div class="form-group">
          <label class="sr-only">Body</label>
          <%= f.text_area :body, class: 'form-control redactor' %>
        </div>
        <%= f.submit "Publish Post", class: 'btn btn-blue', name: 'publish' %>
      <% end %>
    </div>
  </div>
</div>



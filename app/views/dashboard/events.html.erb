<%= render 'dashboard_navbar' %>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h1 class="latoblack">Events</h1>
      <% if @events.blank? %>
        <h3 class="latobold">Currently no events created.</h3>
      <% end %>
      <% for event in @events %>
        
      <% end %>
    </div>
    <div class="col-md-5">
      <h3 class="latolight">Add New Event</h3>
      <%= form_for Event.new do |f| %>
        <div class="form-group">
          <label class="sr-only">Title</label>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
        </div>
        <div class="form-group" id="start_date_picker">
          <label class="sr-only">Start Date</label>
          <%= f.text_field :start_date, class: 'form-control', placeholder: 'Pub Date' %>
        </div>
        <div class="form-group" id="end">
          <label class="sr-only">End Date</label>
          <%= f.text_field :end_date, class: 'form-control', placeholder: 'Pub Date' %>
        </div>
        

        <div class="form-group">
          <label class="sr-only">Team</label>
          <%= f.select(:team, options_for_select(['8U', '9U', '10U', 'All Teams']), {prompt: '-- select team --'}, class: 'form-control') %>
        </div>

        <div class="form-group">
          <label class="sr-only">Type</label>
          <%= f.select(:type, options_for_select(['Practice', 'Scrimmage']), {prompt: '-- select event type --'}, class: 'form-control') %>
        </div>

        <div class="form-group">
          <label class="sr-only">Body</label>
          <%= f.text_area :description, class: 'form-control redactor', id: 'redactor' %>
        </div>



        <%= f.submit "Add Event", class: 'btn btn-default', name: 'publish' %>
      <% end %>
    </div>
  </div>
</div>